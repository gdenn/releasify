<div class="col-sm-4 p-3">
  <div class="card">
    <div class="card-header">
      <h3 class="card-title"><%= environment.name %></h3>
    </div>
    <div class="card-block">
      <div class="row"/>
        <div class="col-sm-6">
          <ul class="list-group-item list-unstyled">
            <li class="font-weight-bold">version</li>
            <li><%= environment.version %></li>
          </ul>
        </div>
        <div class="col-sm-6">
          <ul class="list-group-item list-unstyled">
            <li class="font-weight-bold">last update</li>
            <li><%= environment.last_update.to_s.gsub!("-", ".") %></li>
          </ul>
        </div>
      </div>
    </div>
  </div>
</div>
